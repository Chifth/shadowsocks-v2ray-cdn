{
  "server": "0.0.0.0",
  "server_port": 443,
  "password": "<SS_PASSWORD>",
  "method": "xchacha20-ietf-poly1305",

  "plugin": "v2ray-plugin",
  "plugin_opts": "server;tls;host=<MY_DOMAIN>;path=/wss;cert=/etc/shadowsocks/certs/<MY_DOMAIN>.cert;key=/etc/shadowsocks/certs/<MY_DOMAIN>.key;loglevel=none",

  "timeout": 300,
  "mptcp": true,
  "reuse_port": true,
  "fast_open": true,
  "ipv6_first": true
}